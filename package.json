{
    "name": "workshop-starter",
    "version": "1.0.0",
    "description": "React workshop starter",
    "author": "Marko Arsic",
    "private": true,
    "license": "MIT",
    "scripts": {
        "start": "react-scripts start",
        "build": "react-scripts build",
        "test": "react-scripts test --env=jsdom",
        "clean": "rm -rf node_modules/ && yarn cache clean",
        "reset": "yarn clean && yarn"
    },
    "dependencies": {
        "axios": "^0.18.0",
        "materialize-css": "^1.0.0",
        "react": "^16.8.6",
        "react-dom": "^16.8.6",
        "react-router-dom": "^5.0.0"
    },
    "devDependencies": {
        "enzyme": "~3.9.0",
        "enzyme-adapter-react-16": "~1.12.1",
        "eslint-plugin-jest": "^22.4.1",
        "husky": "~1.3.1",
        "jest-enzyme": "~7.0.2",
        "moxios": "~0.4.0",
        "prettier": "~1.16.4",
        "pretty-quick": "~1.10.0",
        "react-scripts": "2.1.8"
    },
    "jest": {
        "watchPathIgnorePatterns": [
            "/node_modules",
            ".yarn"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "pretty-quick --staged"
        }
    },
    "browserslist": [
        ">0.2%",
        "not dead",
        "not ie <= 11",
        "not op_mini all"
    ]
}
